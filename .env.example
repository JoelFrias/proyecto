# ============================================
# EJEMPLO DE CONFIGURACIÓN
# Copiar este archivo a .env y configurar
# ============================================

# APLICACIÓN
APP_NAME="EasyPOS"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/easypos
APP_TIMEZONE=America/Santo_Domingo

# BASE DE DATOS
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nombre_base_datos
DB_USERNAME=usuario_bd
DB_PASSWORD=contraseña_bd
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# SEGURIDAD
APP_KEY=
SESSION_LIFETIME=120

# LOGS
LOG_LEVEL=debug
LOG_PATH=/logs/php_errors.log

# FACTURACIÓN
TAX_RATE=0.18
CURRENCY=DOP
CURRENCY_SYMBOL=RD$
INVOICE_PREFIX=FAC-